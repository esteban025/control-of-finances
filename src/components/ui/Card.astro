---
interface Props {
  inHome?: boolean;
}
const { inHome = false } = Astro.props;
const padding = inHome ? "p-8" : "p-2";
---

<article
  class:list={[
    "bg-light-bg border border-light-border rounded-xl shadow-lg shadow-light-paragraph/10 dark:bg-dark-card-bg dark:border-dark-border dark:shadow-dark-secondary/50",
    padding,
  ]}
>
  <slot />
</article>
