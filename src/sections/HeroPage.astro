---
import { getSession } from "auth-astro/server";
import UiLink from "@/components/buttons/UiLink.astro";
import Titles from "@/components/ui/Titles.astro";

const session = await getSession(Astro.request);
---

<section class="py-20" id="hero">
  <div
    class="w-11/12 mx-auto max-w-5xl flex flex-col gap-y-4 md:flex-row items-center justify-center"
  >
    <div class="flex-1 flex flex-col justify-center gap-6">
      <Titles text="Bienvenido a Fitnancial" />
      <div class="d">
        <p class="text-pretty text-light-paragraph dark:text-dark-paragraph">
          Gestiona tus finanzas personales de forma sencilla, segura y privada. <strong
            class="font-bold">100% Privacidad:</strong
          > Nunca pedimos tus datos bancarios ni de tarjetas.
        </p>
      </div>
      {
        !session ? (
          <div class="buttons">
            <UiLink text="Comenzar Ahora" href="/login" />
          </div>
        ) : (
          <div class="buttons">
            <UiLink text="Ir al Panel de Control" href="/dashboard" big />
          </div>
        )
      }
    </div>
    <figure class="flex-1">
      <img
        src="/hero.webp"
        alt="Imagen hero de la pÃ¡gina principal"
        class="hero-image"
      />
    </figure>
  </div>
</section>

<style>
  .hero-image {
    width: 100%;
    height: auto;
    max-width: 800px;
    filter: drop-shadow(0 10px 10px var(--color-light-text));
  }
  html.dark .hero-image {
    filter: drop-shadow(0 10px 10px var(--color-dark-card-bg));
  }
</style>
